      <texPath>Things/modern/pistols/tec-9</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>16500</WorkToMake>
      <MarketValue>118</MarketValue>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.73</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.29</AccuracyLong>
      <RangedWeapon_Cooldown>0.97</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>35</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
