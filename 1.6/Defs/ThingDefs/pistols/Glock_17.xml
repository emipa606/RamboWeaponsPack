<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_Glock_17_RWP</defName>
    <label>Glock 17</label>
    <description>A semi-automatic pistol, the Glock 17 is known for its reliability and ease of use. It chambers 9x19mm rounds and is favored for its high accuracy and quick firing rate. Ideal for close to medium-range engagements, it provides a stable option for those needing a dependable sidearm in tough situations.</description>
    <graphicData>
      <texPath>Things/modern/pistols/glock_17</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>15500</WorkToMake>
      <MarketValue>108</MarketValue>
      <Mass>0.7</Mass>
      <AccuracyTouch>0.93</AccuracyTouch>
      <AccuracyShort>0.81</AccuracyShort>
      <AccuracyMedium>0.58</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>1.14</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>26</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9x19mm_Parabellum_RWP</defaultProjectile>
        <warmupTime>0.29</warmupTime>
        <range>18</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
