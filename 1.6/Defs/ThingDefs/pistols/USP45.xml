<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_USP45_RWP</defName>
    <label>USP45</label>
    <description>The USP45 is a semi-automatic pistol designed for accuracy and reliability. Chambered in .45 ACP, it delivers substantial stopping power with a moderate fire rate. Ideal for self-defense or as a sidearm in combat, its balance of precision and force makes it a valuable choice for any colonist.</description>
    <graphicData>
      <texPath>Things/modern/pistols/usp45</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>16700</WorkToMake>
      <MarketValue>121</MarketValue>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.92</AccuracyTouch>
      <AccuracyShort>0.77</AccuracyShort>
      <AccuracyMedium>0.54</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.20</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>38</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_45_ACP_RWP</defaultProjectile>
        <warmupTime>0.30</warmupTime>
        <range>16</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
