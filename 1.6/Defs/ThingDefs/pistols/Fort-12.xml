<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_Fort-12_RWP</defName>
    <label>Fort-12</label>
    <description>The Fort-12 is a compact semi-automatic pistol, favored for its reliability and ease of use. It fires standard rimfire rounds, making it an accessible sidearm for both novice and experienced shooters. With decent accuracy and a modest damage output, it's well-suited for self-defense in close quarters. Ideal for colonists who need a straightforward and effective firearm in potentially hostile environments.</description>
    <graphicData>
      <texPath>Things/modern/pistols/fort-12</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>15500</WorkToMake>
      <MarketValue>100</MarketValue>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.93</AccuracyTouch>
      <AccuracyShort>0.81</AccuracyShort>
      <AccuracyMedium>0.58</AccuracyMedium>
      <AccuracyLong>0.39</AccuracyLong>
      <RangedWeapon_Cooldown>1.15</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>28</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9x18mm_Makarov_RWP</defaultProjectile>
        <warmupTime>0.28</warmupTime>
        <range>18</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>7</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
