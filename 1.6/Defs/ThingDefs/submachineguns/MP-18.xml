<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_MP-18_RWP</defName>
    <label>MP-18</label>
    <description>The MP-18 is an automatic SMG known for its historical significance as one of the first submachine guns used in combat. Designed for close quarters, it offers a rapid rate of fire and moderate accuracy, making it effective for quick skirmishes. While it may lack the power of larger firearms, its lightweight build allows for increased mobility on the battlefield.</description>
    <graphicData>
      <texPath>Things/modern/submachineguns/mp18</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>20000</WorkToMake>
      <MarketValue>150</MarketValue>
      <Mass>4.2</Mass>
      <AccuracyTouch>0.69</AccuracyTouch>
      <AccuracyShort>0.55</AccuracyShort>
      <AccuracyMedium>0.32</AccuracyMedium>
      <AccuracyLong>0.08</AccuracyLong>
      <RangedWeapon_Cooldown>1.05</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>36</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9x19mm_Parabellum_RWP</defaultProjectile>
        <warmupTime>0.52</warmupTime>
        <range>21</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>7</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
