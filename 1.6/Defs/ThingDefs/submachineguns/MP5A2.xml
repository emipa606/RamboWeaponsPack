<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_MP5A2_RWP</defName>
    <label>MP5A2</label>
    <description>The MP5A2 is a compact and reliable submachine gun renowned for its accuracy and rate of fire. Ideal for close to medium-range engagements, it delivers a consistent stream of fire with manageable recoil. The A2 variant features a fixed stock, enhancing stability for marksmen. Despite its age, this weapon remains a popular choice for those requiring a balance between firepower and precision.</description>
    <graphicData>
      <texPath>Things/modern/submachineguns/mp5a2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <WorkToMake>27700</WorkToMake>
      <MarketValue>235</MarketValue>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.73</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.17</AccuracyLong>
      <RangedWeapon_Cooldown>0.92</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>51</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9x19mm_Parabellum_RWP</defaultProjectile>
        <warmupTime>0.56</warmupTime>
        <range>25</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>7</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
