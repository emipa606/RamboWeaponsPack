<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_MP5K-PDW_RWP</defName>
    <label>MP5K-PDW</label>
    <description>The MP5K-PDW is a compact submachine gun that offers a high rate of fire, making it ideal for close-quarters combat. Lightweight and easy to handle, it excels at quickly dispatching threats in tight spaces. However, its effective range is limited, and it can struggle against well-armored targets. Perfect for those who need a reliable firearm in confined environments.</description>
    <graphicData>
      <texPath>Things/modern/submachineguns/mp5k-pdw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <WorkToMake>27500</WorkToMake>
      <MarketValue>228</MarketValue>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.76</AccuracyTouch>
      <AccuracyShort>0.63</AccuracyShort>
      <AccuracyMedium>0.38</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>0.90</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>49</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9x19mm_Parabellum_RWP</defaultProjectile>
        <warmupTime>0.54</warmupTime>
        <range>21</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>7</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
