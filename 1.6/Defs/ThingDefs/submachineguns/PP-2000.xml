      <texPath>Things/modern/submachineguns/pp-2000</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <WorkToMake>26500</WorkToMake>
      <MarketValue>221</MarketValue>
      <Mass>1.4</Mass>
