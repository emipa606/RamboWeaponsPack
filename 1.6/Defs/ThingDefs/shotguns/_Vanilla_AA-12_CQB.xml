<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_ChainShotgun</defName>
    <label>AA-12 CQC</label>
    <description>The AA-12 CQC is a fully automatic shotgun designed for close-quarters combat. It delivers a rapid barrage of shots, making it ideal for situations where sheer firepower is needed at close range. Built with a robust frame, this weapon prioritizes reliability and ease of use, allowing even less experienced shooters to effectively manage its intense output.</description>
    <graphicData>
      <texPath>Things/modern/shotguns/aa-12_cqc</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractMediumRifle</soundInteract>
    <generateCommonality>0.3</generateCommonality>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <MarketValue>375</MarketValue>
      <Mass>5.2</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.43</AccuracyShort>
      <AccuracyMedium>0.38</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>1.26</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_12_Gauge_Buckshot_RWP</defaultProjectile>
        <warmupTime>1.10</warmupTime>
        <range>10</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>ShotAutoShotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
