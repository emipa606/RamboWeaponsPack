<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_RPD_RWP</defName>
    <label>RPD</label>
    <description>The RPD is a light machine gun renowned for its reliability and high rate of fire. Designed for sustained suppressive fire, it offers excellent damage output at medium range. Its drum magazine allows for extended periods of firing without frequent reloads, making it ideal for keeping enemies at bay. However, it's bulkier than other firearms, which can slow the wielder's movement. A valuable addition to any colony's arsenal when firepower and intimidation are essential.</description>
    <graphicData>
      <texPath>Things/modern/machineguns/rpd</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>71500</WorkToMake>
      <MarketValue>642</MarketValue>
      <Mass>7.4</Mass>
      <AccuracyTouch>0.36</AccuracyTouch>
      <AccuracyShort>0.67</AccuracyShort>
      <AccuracyMedium>0.37</AccuracyMedium>
      <AccuracyLong>0.24</AccuracyLong>
      <RangedWeapon_Cooldown>2.14</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>165</Steel>
      <ComponentIndustrial>12</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <equippedStatOffsets>
      <MoveSpeed>-0.34</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_762x39mm_RWP</defaultProjectile>
        <warmupTime>1.33</warmupTime>
        <range>36</range>
        <burstShotCount>7</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot762x39</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
