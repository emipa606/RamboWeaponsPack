<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_RPKS_RWP</defName>
    <label>RPKS</label>
    <description>The RPKS is a light machine gun known for its durability and reliability. It offers a solid balance of firepower and efficiency, featuring a high rate of fire suitable for suppressing enemies in mid-range combat. Although it has moderate accuracy and recoil, the RPKS excels in sustained engagements where consistent fire is key. A favorite among those who prioritize endurance on the battlefield.</description>
    <graphicData>
      <texPath>Things/modern/machineguns/rpks</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>68000</WorkToMake>
      <MarketValue>550</MarketValue>
      <Mass>5.1</Mass>
      <AccuracyTouch>0.45</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.67</AccuracyMedium>
      <AccuracyLong>0.39</AccuracyLong>
      <RangedWeapon_Cooldown>1.40</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>170</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <equippedStatOffsets>
      <MoveSpeed>-0.11</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_762x39mm_RWP</defaultProjectile>
        <warmupTime>1.42</warmupTime>
        <range>36</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>Shot762x39</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
