<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_M249_RWP</defName>
    <label>M249</label>
    <description>The M249 is a light machine gun designed to provide sustained automatic fire with a high rate of fire and large magazine capacity. Ideal for suppressing enemies or engaging multiple targets, the M249 delivers a balance of firepower and mobility. While it excels in fire rate, its accuracy is moderate, making it most effective at shorter ranges.</description>
    <graphicData>
      <texPath>Things/modern/machineguns/m249</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>75000</WorkToMake>
      <MarketValue>669</MarketValue>
      <Mass>7.7</Mass>
      <AccuracyTouch>0.36</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.44</AccuracyMedium>
      <AccuracyLong>0.33</AccuracyLong>
      <RangedWeapon_Cooldown>2.12</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>172</Steel>
      <ComponentIndustrial>12</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <equippedStatOffsets>
      <MoveSpeed>-0.37</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_556x45mm_NATO_RWP</defaultProjectile>
        <warmupTime>1.27</warmupTime>
        <range>37</range>
        <burstShotCount>8</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
