<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_AssaultRifle</defName>
    <label>M16</label>
    <description>The M16 is a reliable and accurate assault rifle designed for mid-range combat. Known for its high rate of fire and versatility, this weapon is ideal for colonists seeking a balance between power and precision. Rugged and tested in various conditions, the M16 will serve as a formidable addition to your arsenal.</description>
    <graphicData>
      <texPath>Things/modern/assaultrifles/m16</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <MarketValue>395</MarketValue>
      <WorkToMake>43000</WorkToMake>
      <Mass>2.9</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.64</AccuracyLong>
      <RangedWeapon_Cooldown>1.36</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_556x45mm_NATO_RWP</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>31</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
