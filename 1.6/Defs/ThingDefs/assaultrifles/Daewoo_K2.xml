<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_Daewoo_K2_RWP</defName>
    <label>Daewoo K2</label>
    <description>The Daewoo K2 is a versatile and reliable assault rifle originating from South Korea. It offers a balanced combination of accuracy, range, and firing rate, making it suitable for a variety of combat situations. Powered by 5.56x45mm NATO rounds, the K2 is known for its durability and effectiveness in the field, providing a dependable choice for colonists looking to enhance their combat capabilities.</description>
    <graphicData>
      <texPath>Things/modern/assaultrifles/daewoo_k2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <MarketValue>392</MarketValue>
      <WorkToMake>39800</WorkToMake>
      <Mass>3.4</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.86</AccuracyShort>
      <AccuracyMedium>0.76</AccuracyMedium>
      <AccuracyLong>0.63</AccuracyLong>
      <RangedWeapon_Cooldown>1.30</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>74</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_556x45mm_NATO_RWP</defaultProjectile>
        <warmupTime>0.92</warmupTime>
        <range>30</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
