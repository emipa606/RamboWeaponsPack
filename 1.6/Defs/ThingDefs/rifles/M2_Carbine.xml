<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_M2_Carbine_RWP</defName>
    <label>M2 Carbine</label>
    <description>The M2 Carbine is a lightweight semi-automatic firearm chambered in .30 caliber. It features a high rate of fire and moderate stopping power, making it versatile for mid-range engagements. Its compact size allows for quick handling while on the move.</description>
    <graphicData>
      <texPath>Things/modern/rifles/m2_carbine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>28000</WorkToMake>
      <MarketValue>275</MarketValue>
      <Mass>2.4</Mass>
      <AccuracyTouch>0.62</AccuracyTouch>
      <AccuracyShort>0.59</AccuracyShort>
      <AccuracyMedium>0.39</AccuracyMedium>
      <AccuracyLong>0.14</AccuracyLong>
      <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_30_Carbine_RWP</defaultProjectile>
        <warmupTime>0.65</warmupTime>
        <range>28</range>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>ShotLightSemiAutoRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>8</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
