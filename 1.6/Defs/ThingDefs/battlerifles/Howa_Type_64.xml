<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_Howa_Type_64_RWP</defName>
    <label>Howa Type 64</label>
    <description>The Howa Type 64 is a Japanese-designed battle rifle known for its reliability and accuracy. Chambered in 7.62x51mm NATO, it delivers powerful, medium-range fire with moderate recoil. Though less advanced than newer models, its well-balanced design makes it a favored choice for those seeking a rugged and dependable weapon in the field.</description>
    <graphicData>
      <texPath>Things/modern/battlerifles/howa_type_64</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractMediumRifle</soundInteract>
    <statBases>
      <WorkToMake>65000</WorkToMake>
      <MarketValue>540</MarketValue>
      <Mass>4.4</Mass>
      <AccuracyTouch>0.19</AccuracyTouch>
      <AccuracyShort>0.39</AccuracyShort>
      <AccuracyMedium>0.64</AccuracyMedium>
      <AccuracyLong>0.43</AccuracyLong>
      <RangedWeapon_Cooldown>1.40</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>115</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_762x51mm_NATO_RWP</defaultProjectile>
        <warmupTime>1.56</warmupTime>
        <range>36</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>ShotBattleRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
