<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_C1A1_SLR_RWP</defName>
    <label>C1A1 SLR</label>
    <description>The C1A1 SLR is a robust and reliable battle rifle developed for harsh environments. Known for its long-range accuracy and stopping power, this semi-automatic firearm fires 7.62x51mm NATO rounds. A favored choice for defenders seeking a balance between fire rate, damage, and precision.</description>
    <graphicData>
      <texPath>Things/modern/battlerifles/c1a1_slr</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <MarketValue>400</MarketValue>
      <Mass>4.3</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.93</AccuracyShort>
      <AccuracyMedium>0.89</AccuracyMedium>
      <AccuracyLong>0.86</AccuracyLong>
      <RangedWeapon_Cooldown>0.94</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>85</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_762x51mm_NATO_RWP</defaultProjectile>
        <warmupTime>1.03</warmupTime>
        <range>39</range>
        <soundCast>ShotBattleRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
