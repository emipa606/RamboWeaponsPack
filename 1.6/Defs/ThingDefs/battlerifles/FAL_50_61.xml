      <texPath>Things/modern/battlerifles/fal_50_61</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractMediumRifle</soundInteract>
    <statBases>
      <WorkToMake>67400</WorkToMake>
      <MarketValue>565</MarketValue>
      <Mass>3.9</Mass>
      <AccuracyTouch>0.22</AccuracyTouch>
      <AccuracyShort>0.44</AccuracyShort>
      <AccuracyMedium>0.63</AccuracyMedium>
      <AccuracyLong>0.42</AccuracyLong>
      <RangedWeapon_Cooldown>1.49</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>125</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
