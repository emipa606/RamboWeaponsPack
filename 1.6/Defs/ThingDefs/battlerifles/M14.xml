<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_M14_RWP</defName>
    <label>M14</label>
    <description>The M14 is a robust battle rifle, known for its high durability and powerful 7.62mm rounds. With a long range and moderate firing rate, it excels at mid to long-range engagements, offering precise shots with significant stopping power. Its design makes it slightly heavier but compensates with accuracy and lethal force.</description>
    <graphicData>
      <texPath>Things/modern/battlerifles/m14</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>35000</WorkToMake>
      <MarketValue>385</MarketValue>
      <Mass>4.1</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.93</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.87</AccuracyLong>
      <RangedWeapon_Cooldown>0.90</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_762x51mm_NATO_RWP</defaultProjectile>
        <warmupTime>1.12</warmupTime>
        <range>39</range>
        <soundCast>ShotSemiAutoRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
