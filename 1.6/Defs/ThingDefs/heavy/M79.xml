<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseRamboGun">
    <defName>Gun_M79_RWP</defName>
    <label>M79</label>
    <description>The M79 is a single-shot grenade launcher capable of delivering explosive payloads with precision. Ideal for medium-range engagements, it launches 40mm grenades that detonate on impact, causing significant area damage. Handling requires careful aim due to its slow reload time and explosive nature. Suitable for tacticians who value power over speed.</description>
    <graphicData>
      <texPath>Things/modern/heavy/m79</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0.4</generateCommonality>
    <statBases>
      <WorkToMake>39500</WorkToMake>
      <MarketValue>375</MarketValue>
      <Mass>2.7</Mass>
      <AccuracyTouch>0.78</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.15</AccuracyMedium>
      <AccuracyLong>0.03</AccuracyLong>
      <RangedWeapon_Cooldown>4.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_40x46mm_Grenade_RWP</defaultProjectile>
        <warmupTime>2.50</warmupTime>
        <ai_AvoidFriendlyFireRadius>4</ai_AvoidFriendlyFireRadius>
        <range>20</range>
        <forcedMissRadius>2.5</forcedMissRadius>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>GrenadeDestructive</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
